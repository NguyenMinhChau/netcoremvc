@model List<source01.Models.CartItem>
<div class="product_list_header">
    <a style="text-decoration:none" class="w3view-cart" href="~/CartItem"><i class="fa fa-cart-arrow-down"></i></a>
    <div class="quantityCount"><span>@Model.Count</span></div>
</div>
<style>
    .product_list_header {
        position: relative;
    }

    .quantityCount {
        content: "";
        position: absolute;
        height: 20px;
        width: 20px;
        border-radius: 50%;
        top: -30%;
        right: -50%;
        background-color: red;
    }

        .quantityCount span {
            color: white;
            position: absolute;
            left: 50%;
            top: 10%;
            transform: translateX(-50%);
            font-size: 12px;
        }
</style>